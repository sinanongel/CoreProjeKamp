<head>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
</head>
<div class="comment-bottom">
    <form id="subFormYorum" method="post">
        <input class="form-control" type="text" name="CommentUserName" placeholder="Adınız Soyadınız" required="">
        <input class="form-control" type="text" name="CommentTitle" placeholder="Konu" required="">
        <textarea class="form-control" name="CommentContent" placeholder="Yorumunuz..." required=""></textarea>
        <input type="submit" id="btnYorum" class="btn btn-primary" value="Yorum Yap">
        <br />
        <div id="sonucYorum"></div>
        <br />
    </form>
</div>

<script type="text/javascript">
    $(function () {
        $("#btnYorum").click(function (e) {
            var bolum = document.createElement("div");
            bolum.className = "alert alert-success";
            bolum.innerHTML = "Yorumunuz Alındı.";
            document.body.appendChild(bolum);
            e.preventDefault();
            var veri = $("#subFormYorum").serialize();
            $.ajax({
                type: "post",
                url: "/Comment/PartialAddComment/",
                data: veri,
                success: function (f) {
                    $("#sonucYorum").html(bolum);
                    setTimeout(() => { window.location.reload() }, 7500);
                }
            });
        });
    });
</script>